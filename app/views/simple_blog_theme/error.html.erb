<div id="slogan" class="card text-white border-light">
  <img src="https://source.unsplash.com/random/1920x1080" class="card-img" />
  <div class="card-img-overlay">
    <%= render 'slogan' %>
  </div>
</div>
<div class="container mt-3">
  <article class="<%= @symbol %> card border-light">
    <div class="card-body pl-0 pr-0">
      <h1 class="card-title text-center">
        <em><%= @code %></em>
        <span><%= t "http_errors.#{@symbol}" %></span>
      </h1>
      <p class="card-text">
        <% if @code >= 500 %>
          <%= t "http_errors.report_error_html" %>
        <% else %>
          <p><%= @exception.try(:message) || flash[:alert] %></p>
        <% end %>
      </p>
    </div>
  </article>
</div>
